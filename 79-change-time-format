public String changeTimeFormat(String strTime) {
    //code here
    list<string> t=strTime.split('\\:');
    if(t[0]>'12'){
        if(Integer.valueOf(t[0])-12<10){
            return 'O'+Integer.valueOf(t[0])-12+':'+t[1]+' '+'PM';
        }
        return Integer.valueOf(t[0])-12+':'+t[1]+' '+'PM';
    }
    if(t[0]=='12'){
        return t[0]+':'+t[1]+' '+'PM';
    }
    if(t[0]=='00'){
        return 12+':'+t[1]+' '+'AM';
    }
    return t[0]+':'+t[1]+' '+'AM';
}